# See http://editorconfig.org
root = true

[*]
charset = utf8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.{r,R,stan}]
indent_size = 2

[*.{c,h,cpp,hpp}]
indent_size = 4

[*.py]
indent_size = 4

[*.json]
indent_size = 2
